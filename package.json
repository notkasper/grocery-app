{
  "name": "hs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prod": "pm2 start ./services/api",
    "dev": "docker stop dev-database && concurrently \"docker start dev-database\" \"npm run api:dev\" \"npm run front-end:dev\" \"npm run admin:dev\"",
    "api:dev": "nodemon ./services/api/src",
    "front-end:dev": "cd services/front-end && webpack serve",
    "admin:dev": "cd ./services/admin && npm start",
    "build:front-end": "cd services/front-end && webpack -p --mode production",
    "build-database:dev": "docker build -t database ./services/database && docker run -p 4000:5432 -d --name dev-database database"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src": [
      "npm run lint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.1.0",
    "pm2": "^4.5.0"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "prettier-eslint": "^9.0.1"
  }
}
